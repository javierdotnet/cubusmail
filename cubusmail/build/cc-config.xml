<?xml version="1.0" encoding="UTF-8"?>
<cruisecontrol>
	<plugin name="svn" classname="net.sourceforge.cruisecontrol.sourcecontrols.SVN" />

	<plugin name="svnbootstrapper"
		classname="net.sourceforge.cruisecontrol.bootstrappers.SVNBootstrapper" />

	<project name="cubusmail">
		<property name="projects.dir" value="C:\projects\cubusmail\projects" />
		<property name="cubusmail.dir" value="${projects.dir}/${project.name}" />

		<listeners>
			<currentbuildstatuslistener file="logs/${project.name}/status.txt" />
		</listeners>

		<modificationset quietperiod="30"
			ignoreFiles="*/build/**.*,*/dist/**.*,*/classes/**.*,*/war/cubusmail/**.*">
			<!-- touch any file in connectfour project to trigger a build -->
			<filesystem folder="${cubusmail.dir}" />
			<!--
				<svn RepositoryLocation="https://cubusmail.googlecode.com/svn" />
			-->
		</modificationset>

		<schedule interval="30">
			<ant anthome="apache-ant-1.7.0" buildfile="${cubusmail.dir}/build.xml"
				target="release" antWorkingDir="${cubusmail.dir}" showAntOutput="false" />
		</schedule>

		<log>
			<merge dir="${cubusmail.dir}/target/test-results" />
		</log>

		<publishers>
			<artifactspublisher dir="${cubusmail.dir}/dist"
				dest="artifacts/${project.name}"  moveInsteadOfCopy="true" />
				
			<htmlemail mailhost="mauritius.application.hypovereinsbank.de"
				returnaddress="juergen.schlierf.extern@hvbis.com"
				buildresultsurl="http://localhost:8080/cruisecontrol/buildresults/${project.name}"
				skipusers="true" spamwhilebroken="true" logdir="logs/cubusmail">
				<always address="juergen.schlierf.extern@hvbis.com" />
			</htmlemail>
		</publishers>
	</project>
</cruisecontrol>